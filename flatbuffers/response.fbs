enum FileType : byte { File, Directory, Link }

table Stat {
  type: FileType;
  size: uint64;
}

table Read {
  data: [ubyte] (required);
}

table Fd {
  id: string (required);
}

enum Error: byte {
  Unknown
}

union Payload { Stat, Fd, Read }

table Response {
  payload: Payload;
  error: Error = null;
}

root_type Response;